<div class="mt-4 px-4">
  <h3 class="text-2xl font-semibold p-3 rounded hover:bg-gray-200"><%= link_to "Inbox", inbox_projects_path %></h3>

  <h2 class="text-2xl font-semibold mt-4">Projects</h2>

  <div id="projects" class="mt-4 mb-6">
    <% @projects.each do |project| %>
      <div class="p-3 rounded hover:bg-gray-200">
        <div>
          <h3 class="text-lg font-semibold"><%= link_to project.name, project_path(project) %></h3>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "New project", new_project_path, class: "p-3 bg-green-700 hover:bg-green-600 rounded text-white" %>
</div>
